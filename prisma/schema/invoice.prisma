model Invoice{
    id               Int  @id @default(autoincrement())
    user_id          Int
    amount           Float
    status           InvoiceStatus
    due_date         DateTime
    paid_date        DateTime  
    created_at       DateTime @default(now())
    updated_at       DateTime @updatedAt

    user             User @relation (fields:[user_id],references:[user_id])
}

InvoiceStatus{
    PAID 
    UNPAID
    OVERDUE
    CANCELLED
}